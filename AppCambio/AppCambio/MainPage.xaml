<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCambio.MainPage"
             BackgroundColor="#CCC" Padding="10">

    <StackLayout Padding="15" Orientation="Vertical" 
                 BackgroundColor="White" VerticalOptions="Center">
        <Label Text="Qual é o Valor em Reais?" 
               HorizontalTextAlignment="Center"
               FontSize="Title"/>

        <Label Text="Qual é o valor em Dólares?" />
        <Entry x:Name="txt_dolares"
               FontSize="Title"
               Placeholder="A quantia em USD"
               Keyboard="Numeric" />

        <Label Text="Qual é a Cotação do dia?" />
        <Entry x:Name="txt_cotacao" 
               FontSize="Title"
               Placeholder="Valor em R$"
               Keyboard="Text" />

        <Button Text="Calcular" Clicked="Button_Clicked" />
        <Label x:Name="lbl_resultado" 
               FontSize="Title" 
               HorizontalTextAlignment="Center" />
    </StackLayout>

</ContentPage>
